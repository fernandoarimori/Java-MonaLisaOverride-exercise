package Hierarchy;

import java.util.Scanner;

public class Animal {
	String nome;
	int idade;
	boolean som;

	Scanner x= new Scanner(System.in);
	Scanner y= new Scanner(System.in);
	
	public Animal() {
		System.out.println("Digite o nome do animal: ");
		nome=y.nextLine();
		System.out.println("Digite a idade do animal: ");
		idade=x.nextInt();
		this.som=true;

	}
		
	public void tempo(){
		if(idade<=0) {
			System.out.print("Idade indefinida");
		}
		else {
			System.out.print("A idade do cachorro é de "+this.idade);
		}
	}

	
	
	public void status() {
		System.out.println("O nome do animal é " + this.nome);
		System.out.println("Sua idade é " + this.idade);
		System.out.println("Faz barulho? "+this.som);

		
		
	}
}	






